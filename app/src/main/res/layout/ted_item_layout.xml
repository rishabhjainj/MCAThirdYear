<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="200dp"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:background="@color/white"
    app:cardElevation="5dp"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.youtube.player.YouTubeThumbnailView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:id="@+id/youtube_thumbnail"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:src="@drawable/ic_ytube" />


        <com.koonat.easyfont.TextView
            android:id="@+id/tvSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youtube_thumbnail"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="3"
            app:font_path="fonts/Roboto-Light.ttf"
            android:text="The Vice President Of India Interacted with the saffaslfajsdfafjalsdfStu"
            android:textColor="@color/black"
            android:textSize="12sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>