<android.support.v7.widget.CardView android:layout_width="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="12dp"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="50"
        android:id="@+id/institution_image"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:src="@drawable/institution1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#99111111"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <com.koonat.easyfont.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="2"
            android:layout_centerInParent="true"
            android:text="SHARDA UNIVERSITY"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/institution_name"
            app:font_path="fonts/Roboto-Bold.ttf"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>