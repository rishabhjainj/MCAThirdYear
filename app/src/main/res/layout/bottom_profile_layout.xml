<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:id="@+id/game_image"
        android:src="@drawable/profile"
        android:layout_below="@+id/your_state_progress_bar_id"
        android:layout_alignParentStart="true" />


    <TextView

        android:id="@+id/game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="259dp"
        android:text="User Profile"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/game1"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_image"
        android:layout_marginTop="100dp"
        android:background="@drawable/rectangleintro"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="13dp">

        <ImageView
            android:id="@+id/instr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/ic_instructions"
            android:tint="@color/game1" />


        <TextView
            android:id="@+id/game_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@string/parental_intro_1"
            android:textColor="@color/game1"

            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/instructions"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/start_p"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_start"
                android:tint="@color/game1" />

            <TextView
                android:id="@+id/text_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Start"
                android:textColor="@color/game1"
                android:textSize="@dimen/textSize" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>