                                    android:elevation="12dp"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="5dp"
                                    android:layout_marginLeft="10dp"
                                    app:cardBackgroundColor="#88c540"
                                    android:layout_height="wrap_content">
                                    <com.koonat.easyfont.TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="APPLY"
                                        android:paddingTop="3dp"
                                        android:id="@+id/registerButtonn"
                                        android:paddingBottom="3dp"
                                        android:paddingLeft="10dp"
                                        android:textStyle="bold"
                                        android:paddingRight="10dp"
                                        app:font_path="fonts/Averta-Bold.otf"
                                        android:textSize="18dp"
                                        android:textColor="@color/white"/>


                                </android.support.v7.widget.CardView>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:paddingBottom="5dp"
                                    android:visibility="gone"

                                    android:layout_marginLeft="10dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_view"/>

                            </LinearLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="58"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rupeee"
                                    android:padding="2dp"
                                    android:visibility="gone"
                                    android:layout_marginBottom="1dp"
                                    android:layout_toLeftOf="@+id/cutratee"
                                    android:layout_marginTop="16dp"
                                    android:textSize="10dp"
                                    android:textColor="@color/black"
                                    android:text="@string/rupee"/>

                                <com.koonat.easyfont.TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/cutratee"
                                    android:text="12,480"
                                    android:visibility="gone"
                                    android:layout_marginTop="17dp"
                                    android:textColor="@color/black"
                                    android:gravity="bottom"
                                    app:font_path="fonts/Averta-Regular.otf"
                                    android:textSize="10dp"
                                    android:layout_toLeftOf="@+id/offpercentagee"
                                    android:background="@drawable/strike"
                                    />
                                <com.koonat.easyfont.TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/offpercentagee"
                                    android:text="(70% OFF)"
                                    android:visibility="gone"
                                    app:font_path="fonts/Averta-Regular.otf"
                                    android:paddingRight="3dp"
                                    android:paddingLeft="3dp"
                                    android:layout_marginTop="17dp"
                                    android:textColor="@color/black"
                                    android:gravity="center_vertical"
                                    android:textSize="10dp"
                                    android:layout_toLeftOf="@+id/rupee22"

                                    />

                                <com.koonat.easyfont.TextView
                                    android:id="@+id/rupee22"
                                    app:font_path="fonts/Averta-Regular.otf"
                                    android:layout_width="wrap_content"
                                    android:paddingBottom="3dp"
                                    android:visibility="gone"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:padding="2dp"
                                    android:layout_toLeftOf="@+id/actualpricee"
                                    android:text="@string/rupee"
                                    android:textColor="@color/black"
                                    android:textSize="26dp" />

                                <com.koonat.easyfont.TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginEnd="8dp"
                                    app:font_path="fonts/Averta-Regular.otf"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/actualpricee"
                                    android:text="PAID"
                                    android:textColor="@color/black"
                                    android:textSize="25dp" />


                            </RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardVieww"
            app:cardElevation="10dp"
            android:elevation="12dp"
            android:layout_marginLeft="3dp"
            app:cardBackgroundColor="@color/darkorangecourse"
            android:layout_marginRight="3dp"
            app:cardCornerRadius="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/linearLayoutt"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="65"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"

                    android:layout_height="wrap_content">
                    <com.koonat.easyfont.TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="7dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:id="@+id/courseNamee"
                        android:text="IELTS - Basic Level"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        app:font_path="fonts/Averta-Semibold.otf" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_weight="35"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="50"
                        android:layout_marginLeft="18dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <com.github.ivbaranov.mfb.MaterialFavoriteButton
                            android:id="@+id/likeButtonn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mfb_animate_favorite="true"
                            android:layout_marginBottom="-8dp"
                            app:mfb_animate_unfavorite="false"
                            app:mfb_padding="10"
                            android:layout_marginRight="-5dp"
                            android:layout_marginLeft="-10dp"
                            app:mfb_rotation_duration="400"
                            android:layout_marginTop="-5dp"
                            app:mfb_rotation_angle="360"
                            app:mfb_bounce_duration="300"
                            android:tint="@color/white"
                            app:mfb_color="@color/red"
                            app:mfb_type="heart" />

                        <com.koonat.easyfont.TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/num_likess"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="3.2K"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            app:font_path="fonts/Averta-Semibold.otf" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="50"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:padding="3dp"
                            android:src="@drawable/ic_duration"
                            />

                        <com.koonat.easyfont.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/durationn"
                            android:layout_gravity="center_vertical"
                            android:text="40 hrs"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            app:font_path="fonts/Averta-Semibold.otf" />
                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>




        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>

