                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/rupee"
                                        android:padding="2dp"
                                        android:visibility="gone"
                                        android:layout_marginBottom="1dp"
                                        android:layout_toLeftOf="@+id/cutrate"
                                        android:layout_marginTop="16dp"
                                        android:textSize="10dp"
                                        android:textColor="@color/black"
                                        android:text="@string/rupee"/>

                                    <com.koonat.easyfont.TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/cutrate"
                                        android:text="12,480"
                                        android:layout_marginTop="17dp"
                                        android:textColor="@color/black"
                                        android:gravity="bottom"
                                        android:visibility="gone"
                                        app:font_path="fonts/Averta-Regular.otf"
                                        android:textSize="10dp"
                                        android:layout_toLeftOf="@+id/offpercentage"
                                        android:background="@drawable/strike"
                                        />
                                    <com.koonat.easyfont.TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/offpercentage"
                                        android:text="(70% OFF)"
                                        android:visibility="gone"
                                        app:font_path="fonts/Averta-Regular.otf"
                                        android:paddingRight="3dp"
                                        android:paddingLeft="3dp"
                                        android:layout_marginTop="17dp"
                                        android:textColor="@color/black"
                                        android:gravity="center_vertical"
                                        android:textSize="10dp"
                                        android:layout_toLeftOf="@+id/rupee2"

                                        />

                                    <com.koonat.easyfont.TextView
                                        android:id="@+id/rupee2"
                                        app:font_path="fonts/Averta-Regular.otf"
                                        android:layout_width="wrap_content"
                                        android:paddingBottom="3dp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:padding="2dp"
                                        android:visibility="gone"
                                        android:layout_toLeftOf="@+id/actualprice"
                                        android:text="@string/rupee"
                                        android:textColor="@color/black"
                                        android:textSize="26dp" />

                                    <com.koonat.easyfont.TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginEnd="8dp"
                                        app:font_path="fonts/Averta-Regular.otf"
                                        android:layout_alignParentRight="true"
                                        android:id="@+id/actualprice"
                                        android:text="PAID"
                                        android:textColor="@color/black"
                                        android:textSize="25dp" />


                                </RelativeLayout>
                            </LinearLayout>

                        </RelativeLayout>


                    </RelativeLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardView"
                app:cardElevation="10dp"
                android:elevation="12dp"
                android:layout_marginLeft="3dp"
                app:cardBackgroundColor="@color/darkorangecourse"
                android:layout_marginRight="3dp"
                app:cardCornerRadius="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="65"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"

                        android:layout_height="wrap_content">
                        <com.koonat.easyfont.TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="7dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:id="@+id/course_namee"
                            android:text="Learning Python for Data Analysis and Visualization"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            app:font_path="fonts/Averta-Semibold.otf" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        android:layout_weight="35"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:layout_marginLeft="18dp"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <com.github.ivbaranov.mfb.MaterialFavoriteButton
                                android:id="@+id/likeButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:mfb_animate_favorite="true"
                                android:layout_marginBottom="-8dp"
                                app:mfb_animate_unfavorite="false"
                                app:mfb_padding="10"
                                android:layout_marginRight="-5dp"
                                android:layout_marginLeft="-10dp"
                                app:mfb_rotation_duration="400"
                                android:layout_marginTop="-5dp"
                                app:mfb_rotation_angle="360"
                                app:mfb_bounce_duration="300"
                                android:tint="@color/white"
                                app:mfb_color="@color/red"
                                app:mfb_type="heart" />

                            <com.koonat.easyfont.TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/num_likes"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="3.2K"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                app:font_path="fonts/Averta-Semibold.otf" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:layout_marginLeft="20dp"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:padding="3dp"
                                android:src="@drawable/ic_duration"
                                />

                            <com.koonat.easyfont.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/duration"
                                android:layout_gravity="center_vertical"
                                android:text="40 hrs"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                app:font_path="fonts/Averta-Semibold.otf" />
                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>




            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>