<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#b2b3b3"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginBottom="2dp"
            custom:cardCornerRadius="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/card1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:background="@drawable/rectangle_purple">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/be"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_benefits"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/anylsisreport"

                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="Benefits of Career Journey"
                    android:textColor="@color/dark_purple"

                    android:textSize="20dp"/>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"

                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/cl1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize2"
                        android:textColor="@color/dark_purple"
                        android:text="@string/cb1"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"

                    android:layout_gravity="center_vertical"

                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:id="@+id/expertise"
                        android:src="@drawable/research"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize2"
                        android:textColor="@color/dark_purple"
                        android:text="@string/cb2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"

                    android:layout_gravity="center_vertical"

                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/cl3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize2"
                        android:textColor="@color/dark_purple"
                        android:text="@string/cb3"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"

                    android:layout_gravity="center_vertical"

                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/b4"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/cl4"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize2"
                        android:textColor="@color/dark_purple"

                        android:text="@string/cb4"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"

                    android:layout_gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/cl5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize2"
                        android:textColor="@color/dark_purple"
                        android:text="@string/cb5"/>

                </LinearLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:focusable="true"
        android:clickable="true"

        custom:cardCornerRadius="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/factscard1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"
        android:paddingLeft="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@color/red"
            android:backgroundTint="@color/red"
            android:focusable="true"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            custom:cardCornerRadius="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/s1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/happy"
                    android:src="@drawable/happy_parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000+"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happy Aspirants"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize2"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@color/green"
            android:backgroundTint="@color/green"
            android:focusable="true"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            custom:cardCornerRadius="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/s2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/research"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1250+"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours of Research"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize2"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginBottom="2dp"
            custom:cardCornerRadius="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:background="@color/red"
                    android:backgroundTint="@color/filter_blue"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="10dp"
                    custom:cardCornerRadius="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/s3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/hpp"
                            android:src="@drawable/scientish"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25+"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="18dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Experts"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize2"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:background="@color/green"
                    android:backgroundTint="@color/pink"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="2dp"
                    custom:cardCornerRadius="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/s4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_robo"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25+"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="18dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scientific Games"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize2"/>


                    </LinearLayout>


                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:focusable="true"
            android:clickable="true"
            custom:cardCornerRadius="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/modecard">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mode"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="Mode of Engagement"
                    android:textColor="@color/dark_purple"
                    android:textSize="20dp"/>
            </LinearLayout>

            <com.roughike.swipeselector.SwipeSelector
                android:layout_marginTop="50dp"
                android:id="@+id/sizeSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:focusable="true"
            android:clickable="true"
            custom:cardCornerRadius="0dp"
            custom:cardElevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/liveChatCard">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/slotBooking"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Talk To Expert"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/purple"
                        android:layout_height="wrap_content" />
                    <include layout="@layout/slot_booking_multiselect"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:id="@+id/slot_complete"
                        android:visibility="gone"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="0dp"
                            android:background="@color/white"
                            android:layout_marginTop="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_weight="0.2"
                            android:layout_gravity="right"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_tick"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:textSize="12dp"
                            android:textAlignment="textStart"
                            android:padding="8dp"
                            android:background="@color/white"
                            android:paddingBottom="5dp"
                            android:text="You have successfully selected your slot. Please proceed with payment to confirm your booking."
                            android:textColor="@color/black_landing"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginBottom="2dp"
            custom:cardCornerRadius="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/card2">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize2"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Click on below button to pay premium and get full 24-30 pages career report"/>



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spatialBox"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:id="@+id/payButton"
                    app:cardBackgroundColor="@color/dark_purple"
                    app:cardElevation="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/filter_blue"
                    android:id="@+id/pay_money"
                    android:text="PAY â‚¹ 3600/-"
                    android:textColor="@color/white"/>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize2"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="NOTE :Report would be available within 48 hours of payment."/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>