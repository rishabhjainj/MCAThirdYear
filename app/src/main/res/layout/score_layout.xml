<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/score_layout"
    android:layout_below="@+id/appbar_layout"
    android:elevation="12dp"
    app:cardElevation="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/info"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:layout_toRightOf="@+id/schol_image"
                    app:font_path="fonts/Roboto-Light.ttf"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black_landing"
                    android:id="@+id/tvscholarship"
                    android:layout_marginBottom="5dp"/>
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aspirant,"
                    app:font_path="fonts/Roboto-Light.ttf"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black_landing"
                    android:id="@+id/username"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>




            <com.koonat.easyfont.TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Welcome to Tomorrow4You"
                android:textSize="15dp"
                app:font_path="fonts/Roboto-Light.ttf"
                android:id="@+id/scholarship_text"
                android:layout_below="@+id/international_scholarship"
                android:textColor="@color/black_landing"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"

                    android:src="@drawable/ic_meter"/>
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    app:font_path="fonts/Averta-Bold.otf"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="140dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Tomorrow4You Engagement Rate is 90%."/>
            </LinearLayout>

        </LinearLayout>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-10dp"
            android:layout_width="140dp"
            android:layout_height="140dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_below="@+id/chart"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#FF6600"
                    android:layout_marginTop="5dp"
                    android:layout_height="10dp" />
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_height="wrap_content"
                    android:text="Do Skill Analysis "
                    android:paddingLeft="2dp"
                    android:layout_below="@+id/wiki_title"
                    app:font_path="fonts/Roboto-Regular.ttf"
                    android:textStyle="bold"
                    android:textSize="9dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:background="#C12552"
                    android:layout_marginTop="5dp"
                    android:layout_height="10dp" />
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_height="wrap_content"
                    android:text="Apply Courses"
                    android:paddingLeft="2dp"
                    android:layout_below="@+id/wiki_title"
                    app:font_path="fonts/Roboto-Regular.ttf"
                    android:textStyle="bold"
                    android:textSize="9dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:background="#6A961F"
                    android:layout_marginTop="5dp"
                    android:layout_height="10dp" />
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_height="wrap_content"
                    android:text="Browse News &amp; Events"
                    android:paddingLeft="2dp"
                    android:layout_below="@+id/wiki_title"
                    app:font_path="fonts/Roboto-Regular.ttf"
                    android:textStyle="bold"
                    android:textSize="9dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:background="#F5C700"
                    android:layout_marginTop="5dp"
                    android:layout_height="10dp" />
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_height="wrap_content"
                    android:text="Dropout"
                    android:paddingLeft="2dp"
                    android:layout_below="@+id/wiki_title"
                    app:font_path="fonts/Roboto-Regular.ttf"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>