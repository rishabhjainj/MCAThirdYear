<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/inst_text"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.koonat.easyfont.TextView
        android:layout_width="match_parent"
        android:padding="3dp"
        android:textSize="13dp"
        android:id="@+id/noOfQues"
        android:layout_height="wrap_content"
        android:textColor="@color/black_landing"
        app:font_path="fonts/Averta-Regular.otf"
        android:textAlignment="center"
        android:text="Total Number of Questions: 10"
        />
    <com.koonat.easyfont.TextView
        android:layout_width="match_parent"
        android:padding="3dp"
        android:id="@+id/difficulty"
        android:layout_marginTop="5dp"
        android:textSize="13dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black_landing"
        app:font_path="fonts/Averta-Regular.otf"
        android:textAlignment="center"
        android:text="Difficulty Level: Moderate"
        />
    <com.koonat.easyfont.TextView
        android:layout_width="match_parent"
        android:padding="3dp"
        android:layout_marginTop="5dp"
        android:textSize="13dp"
        android:id="@+id/fullMarks"
        android:layout_height="wrap_content"
        android:textColor="@color/black_landing"
        app:font_path="fonts/Averta-Regular.otf"
        android:textAlignment="center"
        android:text="Full Marks: 40"
        />
</LinearLayout>