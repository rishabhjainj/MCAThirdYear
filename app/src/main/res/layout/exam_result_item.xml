<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="3dp"
    android:elevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:auto="http://schemas.android.com/tools"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.koonat.easyfont.TextView
                android:layout_width="wrap_content"
                android:id="@+id/questno"
                app:font_path="fonts/Averta-Bold.otf"
                android:padding="2dp"
                android:textColor="@color/red"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textSize="20dp"
                android:text="Q1"/>
            <io.github.kexanie.library.MathView
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:id="@+id/question"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_weight="75"
                auto:engine="MathJax"
                android:padding="5dp"
                auto:text="The effective stress friction angle of a saturated, cohesionless soil is 45."
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:src="@drawable/ic_action_rightarrow"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey"/>


    </LinearLayout>
</android.support.v7.widget.CardView>

