<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="12dp"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="120dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="50"
        android:id="@+id/exam_image"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:src="@drawable/bg_vocabulary"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#B3111111"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/exam_icon"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_vocabulary"
            />

        <com.koonat.easyfont.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:maxLines="2"
            android:textAllCaps="true"
            android:capitalize="characters"
            android:layout_alignParentBottom="true"
            app:textAllCaps="true"
            android:text="vocab"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:id="@+id/subject_text"
            app:font_path="fonts/Averta-Regular.otf"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>