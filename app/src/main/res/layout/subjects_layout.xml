<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/browse_category_layout"
    android:id="@+id/subjects_layout"
    android:layout_marginBottom="1dp"
    android:elevation="3dp"
    android:visibility="gone"
    android:layout_marginTop="1dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
       >


        <com.koonat.easyfont.TextView
            android:id="@+id/course_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending Courses"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black_landing"
            android:layout_marginBottom="5dp"
            app:font_path="fonts/Roboto-Light.ttf"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/course_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="VIEW ALL"
            android:textColor="#00A0E7"
            android:textSize="12sp"
            android:id="@+id/view_all_courses"
            android:textStyle="bold" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/subjects_recyclerview"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_text"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>