<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:id="@+id/content_filters"
    android:paddingBottom="40dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_filters"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SORT BY"
            android:id="@+id/selectSortButtonS"
            android:textColor = "@color/white"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:padding="5dp"
            android:clickable="true">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="5dp"
                android:padding="0dp"
                android:src="@drawable/ic_sort"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/view2_sort" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SORT BY"
                android:textColor="@color/lightpink"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"
                android:gravity="right"
                android:id="@+id/textView1931"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/view2_sort"
                android:layout_toEndOf="@+id/view2_sort" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView

                    android:id="@+id/view_radio1"
                    android:layout_width="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="0dp"
                    android:src="@drawable/sort1" />


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/view_radio2"
                    android:layout_marginTop="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:src="@drawable/sort3"
                    android:layout_below="@+id/view9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/view_radio3"
                    android:layout_marginTop="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:src="@drawable/sort4"
                    android:layout_below="@+id/view10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/view_radio4"
                    android:layout_marginTop="22dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="0dp"
                    android:src="@mipmap/ic_launcher_camp"
                    android:layout_below="@+id/view10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


            </LinearLayout>


            <RadioGroup
                android:id="@+id/sortGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="viewStart"
                android:textDirection="ltr"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/uni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:paddingLeft="10dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="10dp"

                    android:tag="price"
                    android:buttonTint="@color/lightpink"
                    android:text="Trending Universities"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/courses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:paddingLeft="10dp"
                    android:tag="priceDec"
                    android:paddingTop="7dp"
                    android:paddingBottom="10dp"
                    android:buttonTint="@color/lightpink"
                    android:text="Trending Courses"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/stCourses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/lightpink"
                    android:layoutDirection="rtl"
                    android:paddingLeft="10dp"
                    android:tag="alpha"
                    android:paddingTop="8dp"
                    android:paddingBottom="10dp"
                    android:text="Short Term Courses"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <RadioButton
                    android:id="@+id/camp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/lightpink"
                    android:layoutDirection="rtl"
                    android:paddingLeft="10dp"
                    android:tag="alpha"
                    android:paddingTop="8dp"
                    android:paddingBottom="10dp"
                    android:text="Campaigners"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</ScrollView>