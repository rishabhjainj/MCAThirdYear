<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:paddingTop="15dp"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="15"
        android:id="@+id/section_image"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:src="@drawable/ic_egogram"
        android:layout_height="30dp" />
    <com.koonat.easyfont.TextView
        android:textAlignment="center"
        android:elevation="10dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_weight="55"
        android:layout_marginBottom="5dp"
        android:id="@+id/section_name"
        android:background="@drawable/rounded_black_corners"
        app:font_path="fonts/Averta-Semibold.otf"
        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Your ego gar"/>
    <com.koonat.easyfont.TextView
        android:layout_toRightOf="@+id/section_name"
        android:gravity="center"
        android:paddingTop="5dp"
        android:layout_weight="15"
        android:id="@+id/section_time"
        android:paddingBottom="5dp"
        app:font_path="fonts/Averta-Regular.otf"
        android:textSize="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="4 min"/>
    <ImageView
        android:layout_weight="15"
        android:layout_width="0dp"
        android:id="@+id/info_button"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_info_analysis"
        android:layout_alignParentRight="true"
        android:layout_height="30dp" />
</LinearLayout>