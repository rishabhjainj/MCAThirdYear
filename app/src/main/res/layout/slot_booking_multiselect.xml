<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/course_popularity_layout"
    android:id="@+id/buy_course_layout"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <android.support.v7.widget.CardView android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_below="@+id/cardView"
        android:elevation="12dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="10dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/view2"
        android:layout_marginTop="-10dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <include layout="@layout/slot_booking_multi_layout"/>
            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        app:cardElevation="10dp"
        android:elevation="12dp"
        android:layout_marginLeft="3dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginRight="3dp"
        app:cardCornerRadius="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/orange"
            android:id="@+id/linearLayout"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:layout_height="wrap_content">
                <com.koonat.easyfont.TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:id="@+id/course_name"
                    android:text="Start a Live Chat with our Career Counsellor"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:font_path="fonts/Averta-Regular.otf" />
            </LinearLayout>

        </LinearLayout>




    </android.support.v7.widget.CardView>

</RelativeLayout>