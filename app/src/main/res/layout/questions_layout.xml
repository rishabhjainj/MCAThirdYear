                            android:layout_alignParentTop="true"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_disagree" />
                        <com.koonat.easyfont.TextView
