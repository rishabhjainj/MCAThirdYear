<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_marginTop="0dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView android:src="@drawable/report_order"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:layout_marginBottom="0dp"
            android:id="@+id/cart"
            android:layout_gravity="center_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="0dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="0.2"
                android:layout_gravity="right"
                android:layout_height="60dp"
                android:src="@drawable/ic_tick"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textSize="12dp"
                android:textAlignment="textStart"
                android:padding="10dp"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:textColor="@color/black_landing"
                android:text="We have successfully added your report. Kindly proceed to place to your order."
                android:layout_height="match_parent" />

        </LinearLayout>


        <!-- Name Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:background="#82D1F1"
            android:layout_height="wrap_content">


                <com.koonat.easyfont.EditText android:id="@+id/name"
                    android:textColor="@color/filter_blue"
                    android:layout_width="match_parent"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:paddingBottom="7dp"
                    android:textColorHint="@color/black_landing"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="7dp"
                    android:paddingTop="7dp"
                    android:background="@drawable/rounded_rectanlge_white"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textSize="18sp"
                    android:hint="Name" />


                <com.koonat.easyfont.EditText android:id="@+id/email"
                    android:layout_width="match_parent"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:padding="7dp"
                    android:background="@drawable/rounded_rectanlge_white"
                    android:textColorHint="@color/black_landing"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/filter_blue"
                    android:inputType="textPersonName"
                    android:textSize="18sp"
                    android:hint="Email" />





            <!--  Email Label -->

                <com.koonat.easyfont.EditText android:id="@+id/input_address"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:padding="7dp"
                    android:textColorHint="@color/black_landing"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectanlge_white"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/filter_blue"
                    android:textSize="18sp"
                    android:hint="Postal Address" />


                <com.koonat.easyfont.EditText android:id="@+id/pincode"
                    android:layout_width="match_parent"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:padding="7dp"
                    android:textColorHint="@color/black_landing"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_rectanlge_white"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/filter_blue"
                    android:maxLength="6"
                    android:textSize="18sp"
                    android:hint="Pin Code" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/landmarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="LandMark"
                    android:padding="10dp"
                    android:background="@drawable/rounded_rectanlge_white"
                    android:inputType="text"
                    android:textColor="@color/filter_blue"
                    android:textSize="18sp" />

            </android.support.design.widget.TextInputLayout>

            <!-- mobile number -->

                <com.koonat.easyfont.EditText android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:padding="7dp"
                    android:background="@drawable/rounded_rectanlge_white"
                    android:inputType="number"
                    android:layout_marginBottom="20dp"
                    android:textSize="18sp"
                    android:textColorHint="@color/black_landing"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/filter_blue"
                    android:hint="Phone Number" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">

                <EditText android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/filter_blue"
                    android:padding="10dp"
                    android:background="@drawable/rounded_rectanlge_white"
                    android:textSize="18sp"
                    android:hint="Amount + Taxes(18% GST)" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginBottom="5dp">

                <EditText android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rounded_rectanlge_white"
                    android:textColor="@color/filter_blue"
                    android:inputType="text"
                    android:textSize="18sp"
                    android:hint="Description" />

            </android.support.design.widget.TextInputLayout>



        </LinearLayout>
      <include layout="@layout/payments_bottom_ui"/>
        <com.koonat.easyfont.Button
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:background="#1A72B9"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Proceed to Pay"
            android:id="@+id/payfor"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>