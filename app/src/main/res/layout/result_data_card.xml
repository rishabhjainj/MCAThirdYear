<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/inst_text"
    app:cardBackgroundColor="@color/dullwhite"
    android:layout_below="@+id/pie_chart_layout"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/content_about_us"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:layout_weight="50"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="0dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:padding="1dp"
                    android:id="@+id/timeText"
                    android:textSize="13dp"
                    android:textColor="@color/black_landing"
                    android:layout_height="wrap_content"
                    android:text="Time: 45 min"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="5dp"-->
                <!--android:src="@drawable/chevron"/>-->
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:padding="1dp"
                    android:id="@+id/noOfQues"
                    android:textSize="13dp"
                    android:textColor="@color/black_landing"
                    android:layout_height="wrap_content"
                    android:text="No. of questions: 10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="5dp"-->
                <!--android:src="@drawable/chevron"/>-->
                <com.koonat.easyfont.TextView
                    android:id="@+id/correctText"
                    android:layout_width="wrap_content"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:padding="1dp"
                    android:textSize="13dp"
                    android:textColor="@color/black_landing"
                    android:layout_height="wrap_content"
                    android:text="Correct: 3"/>
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    android:padding="1dp"
                    android:textSize="13dp"
                    android:id="@+id/correctMarks"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/green"
                    android:text="+12"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="5dp"-->
                <!--android:src="@drawable/chevron"/>-->
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:padding="1dp"
                    android:id="@+id/incorrectText"
                    android:textColor="@color/black_landing"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:text="Incorrect: 2"/>
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    android:padding="1dp"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/red"
                    android:text="0"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="5dp"-->
                <!--android:src="@drawable/chevron"/>-->
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:padding="1dp"
                    android:id="@+id/unattemptedText"
                    android:textColor="@color/black_landing"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:text="Not Attempted: 5"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:gravity="center_vertical"
            android:layout_weight="50"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="0dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="-10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:padding="1dp"
                    android:textSize="15dp"
                    android:textColor="@color/black_landing"
                    android:layout_height="wrap_content"
                    android:text="Score"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="0dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="5dp"-->
                <!--android:src="@drawable/chevron"/>-->
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="-5dp"
                    android:text="3.75"
                    android:id="@+id/marks"
                    android:textColor="@color/red"
                    android:textSize="35dp"
                    app:font_path="fonts/Averta-Regular.otf" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="0dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="5dp"-->
                <!--android:src="@drawable/chevron"/>-->
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    app:font_path="fonts/Averta-Regular.otf"
                    android:padding="0dp"
                    android:textSize="12dp"
                    android:textColor="@color/black_landing"
                    android:layout_height="wrap_content"
                    android:text="Out of 10"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
