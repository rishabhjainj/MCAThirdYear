<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="255dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:layout_margin="5dp"
    android:id="@+id/card_tab4"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:id="@+id/rel1">

        <TextView
            android:padding="5dp"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_eventName_tab4"
            android:text="The Big Bass House Project Ft Droxic"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_eventName_tab4"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp"
            android:orientation="horizontal"
            android:id="@+id/lin1">

            <ImageView
                android:layout_width="wrap_content"
                android:tint="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/img_cal_tab4"
                android:src="@drawable/ic_action_bag"/>
            <TextView
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:id="@+id/tv_months_tab4"
                android:text=""
                android:layout_marginTop="7dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:id="@+id/tv_dates_tab4"
                android:text=" 21st"
                android:layout_marginTop="7dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:text=" - "
                android:layout_marginTop="7dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:id="@+id/to_month"
                android:text=""
                android:layout_marginTop="7dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:id="@+id/to_date"
                android:text=" 21st"
                android:layout_marginTop="7dp"/>


               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                   android:tint="@color/black"
                android:id="@+id/img_clock_tab4"
                android:src="@drawable/ic_action_name"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/tv_timeAM_tab4"
                android:text="9:00"
                android:layout_marginTop="7dp"/>
               <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                   android:visibility="gone"
                android:id="@+id/tv_AM_tab4"
                   android:textColor="@color/black"
                android:text="AM"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="3dp"/>
               <View
                android:layout_width="5dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                   android:backgroundTint="@color/black"
                android:layout_marginLeft="5dp"
                android:background="@drawable/horizontal_line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/tv_timePM_tab4"
                android:text="12:00"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PM_tab4"
                android:visibility="gone"
                android:text="PM"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:id="@+id/eventDesc"
            android:layout_marginRight="5dp"
            android:layout_marginTop="21dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_info"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBtn_call_tab4"
            android:layout_marginTop="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:tint="@color/red"
            android:background="@color/white"
            android:src="@drawable/ic_phone"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lin1"
           android:id="@+id/rel3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_events_tab4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#99111111">

                <TextView
                    android:id="@+id/tv_label_tab4"
                    android:layout_width="wrap_content"
                    android:paddingRight="4dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/label_layout"
                    android:text="Exam"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_orgName_tab4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_addr_tab4"
                    android:layout_marginLeft="20dp"
                    android:padding="5dp"
                    android:text="Local"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_addr_tab4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="25dp"
                    android:text="Cannaught Place, New Delhi"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:id="@+id/card2_tab4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="35dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/transparent_rectangle"
                    android:elevation="0dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_dist_tab4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="2.4"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_dist_tab4"
                        android:padding="2dp"
                        android:text="KM"
                        android:textColor="@color/white" />
                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>
