<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/randomizer_layout"
    android:layout_below="@+id/trending_layout"
    android:elevation="12dp"
    app:cardCornerRadius="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardElevation="5dp"
    android:layout_marginTop="2dp"
    app:cardBackgroundColor="#3385ff"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="80"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Randomizer"
                    android:textStyle="bold"
                    app:font_path="fonts/Averta-Bold.otf"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:id="@+id/wiki_title" />
                <com.koonat.easyfont.TextView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    android:text="Flip through random articles to read from T4U's hot picks  "
                    android:paddingLeft="2dp"
                    android:layout_below="@+id/wiki_title"
                    app:font_path="fonts/Roboto-Regular.ttf"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white"
                    android:id="@+id/wiki_tag_line"
                    android:layout_marginBottom="5dp"/>


            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_marginRight="25dp"
                android:id="@+id/dice"
                android:layout_gravity="center_vertical"
                android:src="@drawable/die"
                android:layout_height="50dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>