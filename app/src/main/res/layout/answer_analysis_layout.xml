<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/analysis_layout"
    android:layout_below="@+id/inst_text"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <com.koonat.easyfont.TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:paddingTop="0dp"
            app:font_path="fonts/Averta-Regular.otf"
            android:text="Answer Analysis"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/status_recyview"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:nestedScrollingEnabled="false"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:layout_below="@+id/chart"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/green500"
                android:layout_marginTop="8dp"
                android:layout_height="10dp" />
            <com.koonat.easyfont.TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="Correct"
                android:paddingLeft="2dp"
                android:layout_below="@+id/wiki_title"
                app:font_path="fonts/Roboto-Regular.ttf"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:background="@color/red"
                android:layout_marginTop="8dp"
                android:layout_height="10dp" />
            <com.koonat.easyfont.TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="Incorrect"
                android:paddingLeft="2dp"
                android:layout_below="@+id/wiki_title"
                app:font_path="fonts/Roboto-Regular.ttf"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:background="@color/blue"
                android:layout_marginTop="8dp"
                android:layout_height="10dp" />
            <com.koonat.easyfont.TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="Not Attempted"
                android:paddingLeft="2dp"
                android:layout_below="@+id/wiki_title"
                app:font_path="fonts/Roboto-Regular.ttf"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:background="#F5C700"
                android:layout_marginTop="5dp"
                android:layout_height="10dp" />
            <com.koonat.easyfont.TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_height="wrap_content"
                android:text="Dropout"
                android:paddingLeft="2dp"
                android:layout_below="@+id/wiki_title"
                app:font_path="fonts/Roboto-Regular.ttf"
                android:textStyle="bold"
                android:textSize="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>