<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"

    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/rewards"
                android:layout_height="90dp"
                android:src="@drawable/ic_internship" />
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Rewards &amp; Internships"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textStyle="bold"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/news_events"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_career_news" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Career News"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/events_image"
                    android:src="@drawable/ic_events" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_marginRight="20dp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Events &amp; Contests"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/recommender"
                android:layout_height="90dp"
                android:src="@drawable/ic_course" />
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text=" Career Assessment"
            android:layout_height="wrap_content" />



    </LinearLayout>


</LinearLayout>