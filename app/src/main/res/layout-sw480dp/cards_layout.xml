<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="340dp"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_college"
                android:tag="image_tag"
                android:tint="@color/color_lounges"></ImageView>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/location"
                android:layout_toStartOf="@+id/location"
                android:padding="3dp"
                 />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_apply"
                android:layout_alignStart="@+id/imageView"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="61dp"
                android:padding="2dp"
                android:text="College Name"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/location"
                android:layout_marginBottom="3dp"
                android:layout_toStartOf="@+id/location"
                android:src="@drawable/ic_location"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginBottom="10dp"
                android:padding="2dp"
                android:text="Location"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_apply"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignEnd="@+id/imageView"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="19dp"
                android:paddingBottom="3dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="3dp"
                app:fb_borderColor="@color/white"
                app:fb_borderWidth="1dp"
                app:fb_defaultColor="@color/fabColor"
                app:fb_focusColor="@color/fabColor"
                app:fb_fontIconResource="&#xf1d8;"
                app:fb_iconPosition="left"
                app:fb_text="Apply"
                app:fb_textColor="#FFFFFF" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_follow"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/btn_apply"
                android:layout_marginTop="18dp"
                android:paddingBottom="3dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="1dp"
                app:fb_borderColor="@color/white"
                app:fb_borderWidth="1dp"
                app:fb_defaultColor="@color/white_transparent"
                app:fb_focusColor="@color/white_transparent"
                app:fb_fontIconResource="&#xf007;"
                app:fb_iconPosition="left"
                app:fb_text="Follow"
                app:fb_textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/imageView"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="BSc Hons Computer Science"
                    android:textAlignment="center"
                    android:textColor="@color/filter_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="1 Course"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>