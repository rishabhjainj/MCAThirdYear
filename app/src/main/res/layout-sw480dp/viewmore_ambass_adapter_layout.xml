<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    app:cardBackgroundColor="@color/white_transparent"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:padding="5dp"
            android:src="@drawable/ic_profile_default"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#99111111"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/ambassdorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="bottom"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="80dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Prashant Gupta"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/likeButton"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="FMS"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_below="@+id/ambassdorName"
                android:layout_alignEnd="@+id/share" />
            <TextView
                android:id="@+id/txt3"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Delhi"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_below="@+id/txt2"
                android:layout_alignParentStart="true"
                 />


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@drawable/square_button_background"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/linearLayout"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/baca"
                    android:layout_toRightOf="@+id/tv_distance_tab4"
                    android:text="BA"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_alignParentRight="true"
                android:id="@+id/share"
                android:src="@drawable/ic_share"/>


            <com.github.ivbaranov.mfb.MaterialFavoriteButton
                android:id="@+id/likeButton"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:mfb_animate_favorite="true"
                app:mfb_animate_unfavorite="false"
                app:mfb_padding="10"
                android:layout_marginRight="-5dp"
                app:mfb_rotation_duration="400"
                android:layout_marginTop="-5dp"
                app:mfb_rotation_angle="360"
                app:mfb_bounce_duration="300"
                android:tint="@color/white"
                app:mfb_color="@color/red"
                app:mfb_type="heart"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/share" />
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="0dp"
                android:id="@+id/linkedin"
                android:tint="@color/fabColor"
                android:src="@drawable/ic_linked"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="4dp"
                android:layout_below="@+id/txt2"
                android:layout_alignEnd="@+id/ambassdorName" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/img">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_centerVertical="true">
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:id="@+id/email"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/pitchers_btn_background"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="19dp"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_email"
                        android:tint="@color/white" />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/tv_distance_tab4"
                        android:text="Email"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/cal_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/pitchers_btn_background"
                    android:backgroundTint="@color/example_color1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp">

                    <ImageView
                        android:id="@+id/call_icon"
                        android:layout_width="15dp"
                        android:layout_height="17dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp"
                        android:padding="1dp"
                        android:src="@drawable/ic_phone"
                        android:tint="@color/white" />

                    <TextView
                        android:id="@+id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/call_icon"
                        android:text="Call"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                </RelativeLayout>


            </LinearLayout>



