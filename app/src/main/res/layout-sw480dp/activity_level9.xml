<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/analysis_background"
    android:id="@+id/puzzle4"
    tools:context="com.wireout.yantra.com.wireout.GameBrainBooster.Levels.Level9Activity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="85dp"
        android:textColor="#000"
        android:text="There are 2 mothers 2 daughters\nand grandma with granddaughter.\nCount all the people." />

    <com.wireout.GameBrainBooster.CustomView
        android:id="@+id/custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/mom" />



    <Button
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/brain_op_buttonanim"
        android:onClick="onSkip"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:text="Skip >>"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView12"
        android:layout_marginTop="45dp"
        android:layout_marginStart="35dp"
        android:ems="10"
        android:hint="Enter your answer"
        android:textAlignment="center"
        android:inputType="number" />

    <Button
        android:id="@+id/button26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="15sp"
        android:layout_marginStart="18dp"
        android:background="@drawable/brain_op_buttonanim"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />




</RelativeLayout>