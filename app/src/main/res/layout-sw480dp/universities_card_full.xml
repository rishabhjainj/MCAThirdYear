<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/uni_linear_layout"
    xmlns:fancy="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff000000">



            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:tag="image_tag"/>

            <RelativeLayout
                android:id="@+id/above_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#99111111"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <com.github.ivbaranov.mfb.MaterialFavoriteButton
                    android:id="@+id/likeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="72dp"
                    android:layout_marginTop="5dp"
                    android:padding="0dp"
                    android:tint="@color/white"
                    app:mfb_animate_favorite="true"
                    app:mfb_animate_unfavorite="false"
                    app:mfb_bounce_duration="300"
                    app:mfb_color="@color/red"
                    app:mfb_padding="10"
                    app:mfb_rotation_angle="360"
                    app:mfb_rotation_duration="400"
                    app:mfb_type="heart" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/callbtn"
                    android:layout_marginStart="-72dp"
                    android:layout_toEndOf="@+id/likeButton"
                    android:src="@drawable/ic_share_logo" />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/callbtn"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:tint="@color/white"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_call_uni"
                    android:layout_height="25dp" />


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/enrollLayout"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/enroll_button_background"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/location"
                    >


                    <ImageView
                        android:layout_width="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_height="12dp"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_enroll"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@+id/tv_distance_tab4"
                        android:text="APPLY"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:layout_marginEnd="15dp"
                    android:layout_alignBottom="@+id/imageView3"
                    android:layout_toStartOf="@+id/textView" />


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginBottom="5dp"
                    android:text="Coimbatore Institute Of Technology"
                    android:textColor="@color/white"
                    android:textSize="17dp"

                    android:layout_marginLeft="-10dp"
                    android:layout_above="@+id/location"
                    android:layout_toRightOf="@+id/imageView3"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"

                    android:src="@drawable/ic_location"
                    android:tint="@color/white"
                    android:id="@+id/imageView3"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="55dp"
                    android:layout_alignParentBottom="true"
                    />
                <TextView
                    android:id="@+id/location"
                    android:layout_width="170dp"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="2"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Coimbatore, Tamil Nadu"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="22dp"
                    android:layout_toEndOf="@+id/imageView3" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:visibility="gone"
                android:layout_below="@+id/imageView"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/rel4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/fabColor"
                        android:background="@drawable/pitchers_btn_background"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_entrance"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/tv_KM_tab4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/tv_distance_tab4"
                            android:text="Merit"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/pitchers_btn_background"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="12dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_orgg"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/type"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/tv_distance_tab4"
                            android:text="Private"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="9dp"
                        android:background="@drawable/pitchers_btn_background"
                        android:backgroundTint="@color/color_tab_3"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="14dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_vertical"
                            android:padding="1dp"
                            android:src="@drawable/ic_rating"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_toRightOf="@+id/loc_icon"
                            android:text="5.0"

                            android:id="@+id/ratingtext"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/tv_distance_tab4"
                            android:text="Rating"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/cal_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/pitchers_btn_background"
                        android:backgroundTint="@color/example_color1">

                        <ImageView
                            android:id="@+id/call_icon"
                            android:layout_width="10dp"
                            android:layout_height="12dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="2dp"
                            android:padding="1dp"
                            android:src="@drawable/ic_phone"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/call_icon"
                            android:text="Call"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>